<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.mafia.MafiaMenuFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorYellowBackground">

        <View
            android:id="@+id/view2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/mafia_menu_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/hat"
            tools:visibility="visible" />


        <View
            android:id="@+id/view3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.17"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mafia_menu_image"
            android:layout_width="match_parent"
            android:layout_height="0dp" />


        <Button
            android:id="@+id/mafia_menu_play"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view3"
            app:layout_constraintWidth_percent="0.7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/button_background_orange_light"
            android:fontFamily="@font/dustismo_bold"
            android:text="@string/play"
            android:textColor="@color/colorYellowBackground"
            android:textSize="30dip"
            android:visibility="gone"
            tools:visibility="visible" />

        <View
            android:id="@+id/view4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.04"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mafia_menu_play"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/mafia_menu_rules"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view4"
            app:layout_constraintWidth_percent="0.7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/button_background_orange_medium"
            android:fontFamily="@font/dustismo_bold"
            android:text="@string/rules"
            android:textColor="@color/colorYellowBackground"
            android:textSize="30dip"
            android:visibility="gone"
            tools:visibility="visible" />

        <View
            android:id="@+id/view5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.04"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mafia_menu_rules"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/mafia_menu_roles"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view5"
            app:layout_constraintWidth_percent="0.7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/button_background_orange_dark"
            android:fontFamily="@font/dustismo_bold"
            android:text="@string/roles"
            android:textColor="@color/colorYellowBackground"
            android:textSize="30dip"
            android:visibility="gone"
            tools:visibility="visible" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>