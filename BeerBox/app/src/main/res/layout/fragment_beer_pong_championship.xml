<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.beerpong.BeerPongChampionshipFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/beer_pong_championship_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorRedBackground"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.33">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/beer_pong_championship_2_1_card"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="2"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:cardBackgroundColor="@color/colorRedLightLight"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/colorRedDark"
                app:strokeWidth="4dp">

                <TextView
                    android:id="@+id/beer_pong_championship_2_1_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/dustismo_bold"
                    android:gravity="center"
                    android:textSize="30dip"
                    tools:text="Siemankos" />


            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.34">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/beer_pong_championship_2_win_card"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="2"
                android:clickable="false"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:cardBackgroundColor="@color/colorRedLightLight"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/colorRedDark"
                app:strokeWidth="4dp">

                <TextView
                    android:id="@+id/beer_pong_championship_2_win_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/dustismo_bold"
                    android:gravity="center"
                    android:textSize="30dip"
                    tools:text="Siemanko" />


            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="4dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_weight="3"
                android:background="@color/colorRedDark" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/colorRedDark" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/linearLayout2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.33">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/beer_pong_championship_2_2_card"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="2"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:cardBackgroundColor="@color/colorRedLightLight"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/colorRedDark"
                app:strokeWidth="4dp">

                <TextView
                    android:id="@+id/beer_pong_championship_2_2_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/dustismo_bold"
                    android:gravity="center"
                    android:textSize="30dip"
                    tools:text="Siemanko" />


            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/beer_pong_championship_4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorRedBackground"
        android:visibility="gone"
        tools:visibility="visible">

        

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/beer_pong_championship_8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorRedBackground"
        android:visibility="gone">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/beer_pong_championship_16"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorRedBackground"
        android:visibility="gone">

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>